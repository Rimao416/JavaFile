package TP2;

public class Cercle extends Forme {
	double rayon;
	static int compteur ;
	
public Cercle(double rayon,Point P)
{
	super(P);
	this.rayon = rayon;
}
public Cercle ()
{
	super(new Point());
	this.rayon = 0;
	
}
public String toString()
{	
	return "Le cercle est de rayon :"+rayon+"a pour centre: "+centre.toString();
	
}
public void affiche(){
	
	
	System.out.println(toString());

}
double perimetre()
{
	return(2* Math.PI *rayon);
	
}

double surface()
{
	
	return (Math.PI * rayon * rayon);
	
}

public void test(Cercle d, Cercle e)
{
	double d1 = d.rayon;
	double d2 = e.rayon;
	if(d1.distance(d2) < d1+d2 )
	{
		
	}
	

}
}
